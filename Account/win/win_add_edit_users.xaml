        <TextBox x:Name="txt_address" TabIndex="3" MaxLength="450" FlowDirection="RightToLeft" HorizontalAlignment="Left" Height="128" Margin="318,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168">
