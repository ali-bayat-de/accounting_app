        <TextBox x:Name="txt_family" TabIndex="1" MaxLength="50" FlowDirection="RightToLeft" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="29" Margin="318,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168">
